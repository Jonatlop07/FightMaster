{
  "name": "fight_master_backend",
  "version": "0.0.1",
  "description": "Simpler version of Starfund's FightMaster App",
  "author": "Jonathan LÃ³pez Castellanos",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "dotenv -e ./env/app/local.env nest start",
    "start:dev": "dotenv -e ./env/app/local.env nest start --watch",
    "start:debug": "dotenv -e ./env/app/local.env nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config test/end-to-end/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.1.4",
    "@nestjs/typeorm": "^8.0.2",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "env-var": "^7.1.1",
    "express": "^4.18.2",
    "helmet": "^5.0.0",
    "module-alias": "^2.2.3",
    "moment": "^2.29.4",
    "pg": "^8.11.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.3.16",
    "typeorm-transactional": "^0.4.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/chalk": "^2.2.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.5.0",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "chalk": "^4.1.2",
    "class-transformer": "^0.5.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.0.3",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.1",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "feature"
    ],
    "rootDir": ".",
    "moduleNameMapper": {
      "@core/(.*)$": "<rootDir>/src/core/$1",
      "@db/(.*)$": "<rootDir>/src/db/$1",
      "@framework/(.*)$": "<rootDir>/src/framework/$1",
      "@test/(.*)$": "<rootDir>/test/$1"
    },
    "testMatch": [
      "<rootDir>/test/bdd-functional/tests/**/*.steps.ts",
      "<rootDir>/test/unit/**/*.spec.ts",
      "<rootDir>/test/integration/**/*.integration_spec.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  },
  "_moduleAliases": {
    "@core": "src/core",
    "@db": "src/db",
    "@framework": "src/framework"
  }
}
